APP_NAME="CoverManager - CRM Service"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single,bugsnag  # Comma-separated list of channels. Use "stderr,bugsnag" for production/ECS
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=pgsql
DB_HOST_READ=127.0.0.1
DB_HOST_WRITE=127.0.0.1
DB_PORT=5432
DB_DATABASE=cover
DB_USERNAME=cover
DB_PASSWORD=
DB_SSLMODE=prefer


SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

CACHE_STORE=redis
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=eu-west-1

SQS_PREFIX=
SQS_QUEUE=

AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

QUEUE_CONNECTION=redis

# Bugsnag Configuration
BUGSNAG_API_KEY=
# IMPORTANT: Set to false for queue workers to report errors immediately
# instead of batching them (which doesn't work well with long-running workers)
BUGSNAG_BATCH_SENDING=false

SAIL_XDEBUG_MODE=develop,debug,coverage
DEBUGBAR_ENABLED=true

# JWT Configuration
# Generate a secure secret with: openssl rand -base64 32
# IMPORTANT: Keep this secret secure and never commit to version control
JWT_SECRET=
JWT_EXPIRATION=3600

# Machine token for API authentication
# Generate with: php -r "echo bin2hex(random_bytes(32));"
MACHINE_TOKEN=

# CoverManager Integration
COVERMANAGER_BASE_URL=https://beta.covermanager.com

# Sentry Error Tracking
SENTRY_LARAVEL_DSN=

# OpenSearch Configuration
OPENSEARCH_HOST=https://localhost:9200
OPENSEARCH_USER=admin
OPENSEARCH_PASSWORD=
